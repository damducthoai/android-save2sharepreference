<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="butchjgo.com.sharepreference.MainActivity">

    <EditText
        android:id="@+id/txtKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/btnSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKey"
        android:layout_marginStart="71dp"
        android:layout_marginTop="129dp"
        android:text="Set"
        android:onClick="doSet"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSet"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_alignEnd="@+id/txtKey"
        android:text="Get"
        android:onClick="doGet"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="70dp" />

    <EditText
        android:id="@+id/txtValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtKey"
        android:layout_below="@+id/txtKey"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="text"
        android:text="" />
</RelativeLayout>
